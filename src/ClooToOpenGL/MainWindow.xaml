<Window x:Class="ClooToOpenGL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClooToOpenGL"
        mc:Ignorable="d"
        Title="Cloo to OpenGL" Width="640" Height="480"
        xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        KeyDown="Window_KeyDown" >
    <Grid>
        <sharpGL:OpenGLControl 
            OpenGLDraw="SGL_Draw" Resized="SGL_Resized" OpenGLInitialized="SGL_Initialized" DrawFPS="false"
            RenderContextType="FBO" MouseWheel="SGL_MouseWheel" MouseUp="SGL_MouseUp" />
    </Grid>
</Window>
